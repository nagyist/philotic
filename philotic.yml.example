  # connection_loss_handler: method/proc
  timeout: 2
  
  #exchange settings
  exchange_name: philotic.headers
  # message_return_handler: method/proc
  
  #message settings
  routing_key: ~
  persistent: false
  immediate: false
  mandatory: false
